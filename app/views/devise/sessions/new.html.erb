
<div class="page-header"style="background-color:#999999;">
<h1 style="text-align:left;">Sign in</h1>
  </div>

<%= form_for(resource ,:as => resource_name, :url => session_path(resource_name)) do |f| %>
<div class="control-group">
<%= f.label :email,:class=>"control-label" %>
  <div class="controls"><%= f.email_field :email %></div>

  <%= f.label :password,:class=>"control-label" %>
  <div class="controls"> <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    
    <div class="controls">
      <%= f.check_box :remember_me %> <%= f.label :remember_me, :class=>"checkbox" %></div>
    


  <% end -%>

  <div><%= f.submit "Sign in", :class=>'btn btn-success'%></div>
</div>
<% end %>


<%= render "devise/shared/links" %>
